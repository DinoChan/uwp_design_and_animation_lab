<Page x:Class="DesignAndAnimationLab.Demos.Gooey.GooeyEllipseDemoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:DesignAndAnimationLab.Demos.Gooey"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">

    <Grid x:Name="Root" Background="White">
        <xaml:CanvasAnimatedControl x:Name="Canvas"
                                    CreateResources="OnCreateResource"
                                    Draw="OnDraw"
                                    SizeChanged="OnCanvasSizeChanged"/>
    </Grid>
</Page>
